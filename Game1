const dino = document.getElementById("dino");
const cactus = document.getElementById("cactus");

document.addEventListener("keydown", function(event) {
    jump();
});

function jump() {
    if (dino.classList != "jump") {
        dino.classList.add("jump")
    }
    setTimeout(function () {
        dino.classList.remove("jump")
    }, 300)
}
let isAlive = setInterval(function() {
    let dinoTop = parseInt(window.getComputedStyle(dino).getPropertyValue("top"))
    let cactusLeft = parseInt(window.getComputedStyle(cactus).getPropertyValue("left"))
    if (cactusLeft < 50 && cactusLeft > 0 && dinoTop >= 140) {
        alert ("Dead")
    }
}, 10)
.game {
  width: 600px;
  height: 200px;
  border-bottom: 1px solid #000;
  margin: auto;
}
#dino {
  width: 50px;
  height: 50px;
  background-image: url(https://www.kindpng.com/picc/m/108-1085324_chrome-dinosaur-png-t-rex-google-png-transparent.png);
  background-size: 50px 50px;
  position: relative;
  top: 150px;
}
#cactus {
  width: 20px;
  height: 40px;
  background-image: url(https://e7.pngegg.com/pngimages/380/807/png-clipart-game-off-game-jam-gamedev-net-video-game-cactus-game-angle-thumbnail.png);
  background-size: 20px 40px;
  position: relative;
  top: 110px;
  left: 570px;
  animation: cactusMov 1s infinite linear;
}
@keyframes cactusMov {
  0% {
    left: 580px;
  }
  100% {
    left: -20px;
  }
}

.jump {
  animation: jump 0.3s linear;
}

@keyframes jump {
  0% {
    top: 150px;
  }
  30% {
    top: 130px;
  }
  50% {
    top: 80px;
  }
  80% {
    top: 130px;
  }
  100% {
    top: 150px;
  }
}
